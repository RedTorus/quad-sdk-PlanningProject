<launch>
  <arg name="gui" default="true" />
  <arg name="paused" default="false" />
  <arg name="controller" default="underbrush" />
  <arg name="live_plot" default="false" />
  <arg name="world" default="flat" />
  <arg name="robot_type" default="spirit_rotors" />

  <include file="$(find quad_utils)/launch/quad_gazebo.launch">
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)" />
    <arg name="controller" value="$(arg controller)" />
    <arg name="live_plot" value="$(arg live_plot)" />
    <arg name="world" value="$(arg world)" />
    <arg name="robot_type" value="$(arg robot_type)" />
  </include>

  <!-- Spawn two boxes defined in separate SDF files -->
  <node name="spawn_box1" pkg="gazebo_ros" type="spawn_model" args="-sdf -file $(find quad_simulator)/underbrush_description/sdf/box1.sdf -model box1" output="screen"/>
  <node name="spawn_box2" pkg="gazebo_ros" type="spawn_model" args="-sdf -file $(find quad_simulator)/underbrush_description/sdf/box2.sdf -model box2" output="screen"/>

  <!-- Load the custom bounding boxes plugin -->
  <gazebo>
    <plugin name="bounding_boxes_plugin" filename="libquad_utils.so">
      <link name="box1">
        <length>0.5</length>
        <width>0.5</width>
        <height>0.5</height>
      </link>
      <link name="box2">
        <length>1.0</length>
        <width>0.5</width>
        <height>0.5</height>
      </link>
    </plugin>
  </gazebo>

  <!-- Uncomment if needed -->
  <!-- <node name="apply_force_node" pkg="quad_utils" type="apply_force_node" output="screen"/> -->

  <!-- Uncomment if needed -->
